<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Breakout" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" KeyDown="Window_KeyDown">
    <Grid Background="#FF4B4B4B">
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="400" Margin="10,10,10,10" VerticalAlignment="Top" Width="300" Background="#FF818181">
            <Ellipse x:Name="ball" Fill="#FFF4F4F5" Height="10" Canvas.Left="100" Stroke="Black" Canvas.Top="100" Width="10"/>
            <Grid x:Name="panel" Canvas.Left="0" Canvas.Top="0" Margin="0" Width="300" Height="400" Background="#FF1F1F1F">
                <Label x:Name="info" Content="Redis connecting..." Margin="0" VerticalAlignment="Center" Foreground="#FFD1D1D1" FontSize="22" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </Grid>
        </Canvas>

    </Grid>
</Window>
